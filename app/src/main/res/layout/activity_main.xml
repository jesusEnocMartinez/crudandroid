<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crud clientes"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="38dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu correo"
        app:layout_constraintEnd_toStartOf="@+id/editText4"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Ingresa tu apellido"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/editText3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu nombre"
        app:layout_constraintEnd_toStartOf="@+id/editText2"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:backgroundTint="#11E4DC"
        android:text="Insertar"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="497dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#11E4DC"
        android:text="Actualizar"
        app:layout_constraintStart_toEndOf="@+id/button"
        tools:layout_editor_absoluteY="497dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:backgroundTint="#11E4DC"
        android:text="Borrar"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:backgroundTint="#11E4DC"
        android:text="Buscar"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="578dp" />

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        tools:layout_editor_absoluteX="164dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        tools:layout_editor_absoluteX="164dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        tools:layout_editor_absoluteX="165dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:text="Ingresa tu IDE"
        app:layout_constraintEnd_toStartOf="@+id/id"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="419dp"
        android:layout_height="59dp"
        android:backgroundTint="#2196F3"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="681dp" />

</androidx.constraintlayout.widget.ConstraintLayout>